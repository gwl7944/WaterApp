<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F8FA"
    tools:context="taxiang.MyFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp"

        android:background="@drawable/bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作中"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"></TextView>
        <TextView android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"></TextView>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-300dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round6">
                <TextView android:id="@+id/tongnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余桶数：0"
                    android:textSize="18sp"
                    android:textColor="#181919"
                    android:padding="10dp"
                    ></TextView>
                <TextView android:id="@+id/kongtongnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余空桶数：0"
                    android:textSize="18sp"
                    android:textColor="#181919"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    ></TextView>
            </RelativeLayout>
            <ListView android:id="@+id/shop_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round6">

            </ListView>
            <LinearLayout android:id="@+id/rijie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:background="@drawable/round6">
                <TextView android:id="@+id/zongnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当日总出库桶数：0"
                    android:textSize="18sp"
                    android:textColor="#181919"
                    android:padding="10dp"
                    ></TextView>
                <TextView android:id="@+id/kongzongnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当日总回空桶数：0"
                    android:textSize="18sp"
                    android:textColor="#181919"
                    android:padding="10dp"
                    ></TextView>
                <TextView android:id="@+id/yazongnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当日押金缴纳桶数：0"
                    android:textSize="18sp"
                    android:textColor="#181919"
                    android:padding="10dp"
                    ></TextView>
                <TextView android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核结果：通过"
                    android:textSize="18sp"
                    android:textColor="#181919"
                    android:padding="10dp"
                    ></TextView>
            </LinearLayout>
            <TextView android:id="@+id/rijiesuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日结算"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:background="@drawable/round2"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
