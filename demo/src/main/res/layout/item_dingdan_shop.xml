<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">
 <taxiang.MyImageView android:id="@+id/shop_img"
     android:layout_width="70dp"
     android:layout_height="70dp"
      ></taxiang.MyImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <TextView android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#181919"
            android:textSize="14sp"
            android:text="数量"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_weight="1">
            <TextView android:id="@+id/shop_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#929699"
                android:textSize="14sp"
                android:text="商品"></TextView>
            <TextView android:id="@+id/is_hui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#00B23C"
                android:textSize="14sp"
                android:text="需要回桶"></TextView>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
